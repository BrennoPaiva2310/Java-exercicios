package exercicios;

import javax.swing.JOptionPane;

public class Imc {

	public static void main(String[] args) {
		String p = JOptionPane.showInputDialog("Digite o seu peso: ");
		String a = JOptionPane.showInputDialog("Digite a sua altura: ");
		
		Double pesoConvert = Double.parseDouble(p);
		Double alturaConvert = Double.parseDouble(a);
		double resultado =  pesoConvert / (alturaConvert * alturaConvert);
		
		if(resultado < 18.5) {
			System.out.println("Magreza");
			break;
		
			if(resultado >= 18.5 && resultado <= 24.9) {
				System.out.println("Normal");
				break;
			
				if(resultado >= 24.9 && resultado <= 30) {
					System.out.println("Normal");
					break;


		
	
	
	
	
	
	
	}
}
