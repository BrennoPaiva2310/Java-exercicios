package exercicios;

import java.util.Scanner;

public class Fahrenheit {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		System.out.println("Qual a sua temperatura em Fahrenheit? ");
		String temperaturaFahrenheit = entrada.nextLine();
		
		Double formula = (Double.parseDouble(temperaturaFahrenheit)-32) * 5/9;
		
		System.out.println("O resultado da sua conversão é: " + formula +"°C");
		
		entrada.close();
		
		
	};

}
